<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_payment_id_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Payment ID"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/item_payment_status_imageView"
        app:layout_constraintTop_toTopOf="@+id/item_payment_amountKop_textView" />

    <TextView
        android:id="@+id/item_payment_amountKop_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="20000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_payment_status_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refund"
        app:layout_constraintBottom_toTopOf="@+id/divider3"
        app:layout_constraintEnd_toEndOf="@id/item_payment_amountKop_textView"
        app:layout_constraintTop_toBottomOf="@+id/item_payment_amountKop_textView" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@+id/item_payment_status_textView"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/item_payment_status_imageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_check_circle_24" />

    <TextView
        android:id="@+id/item_payment_card_number_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card number"
        app:layout_constraintStart_toStartOf="@+id/item_payment_id_textView"
        app:layout_constraintTop_toBottomOf="@+id/item_payment_id_textView" />


</androidx.constraintlayout.widget.ConstraintLayout>